@model IEnumerable<WebApiDataOrbis.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDescriptionOriginal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductBarcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rowchecksum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescriptionOriginal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductBarcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rowchecksum)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductsID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductsID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductsID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
